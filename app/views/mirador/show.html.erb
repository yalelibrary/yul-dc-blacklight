<!DOCTYPE html>
<html>
<head>
  <title>Yale Digital Collections Mirador Viewer</title>
  <script src="/mirador.js"></script> 
</head>
<body>
<div id="my-mirador"/> 
<script type="text/javascript">

function getUrlVar(key){
    var result = new RegExp(key + "=([^&]*)", "i").exec(window.location.search);
    return result && unescape(result[1]) || "";
}

var manifest_param = getUrlVar("manifest");
var canvas_param = getUrlVar("canvas");

manifests = {}
windows = [];

if (manifest_param) {
    manifests[manifest_param] = {
        "provider": "Yale University"
    }
    windows.push({
        "loadedManifest": manifest_param,
        "thumbnailNavigationPosition": 'far-bottom'
    })
}


var mirador = Mirador.viewer({
  "id": "my-mirador",
  "manifests": manifests,
  "windows": windows
});
</script>
</body>
</html>
